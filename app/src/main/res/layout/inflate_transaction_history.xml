<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="@dimen/dp8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/trans_hist_symbol"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp12"
            android:scaleType="fitCenter"
            android:src="@drawable/amount_receive" />

        <RelativeLayout
            android:id="@+id/trans_hist_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/trans_hist_amt"
            android:layout_toEndOf="@id/trans_hist_symbol">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/description_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXX"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/to_from_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_below="@id/description_info"
                android:text="yyyyyyy" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/date_time_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_below="@id/to_from_info"
                android:layout_marginTop="@dimen/dp12"
                android:text="zzzzzz" />

        </RelativeLayout>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/trans_hist_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="djfvbdjkfvb" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
