<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.misterymatch.app.activity.SignUpActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp">

        <TextView
            android:fontFamily="@font/opensans_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/sign_up"
            android:textColor="@color/colorPrimaryText"
            android:textSize="22sp"
             />

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:alpha="0.3"
                android:src="@drawable/bg_signup" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/border_bottom"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_user" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:fontFamily="@font/opensans_semibold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingEnd="0dp"
                                android:paddingStart="16dp"
                                android:text="@string/first_name"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="14sp"
                                 />

                            <EditText
                                android:id="@+id/first_name"
                                style="@style/Edittext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="John"
                                android:inputType="textPersonName|textCapWords|textCapSentences" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/border_bottom"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:fontFamily="@font/opensans_semibold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingEnd="0dp"
                                android:paddingStart="16dp"
                                android:text="@string/last_name"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="14sp"
                                 />

                            <EditText
                                android:id="@+id/last_name"
                                style="@style/Edittext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Deo"
                                android:inputType="textPersonName|textCapWords|textCapSentences" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/border_bottom"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_email" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="@font/opensans_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="0dp"
                            android:paddingStart="16dp"
                            android:text="@string/email"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="14sp"
                             />

                        <EditText
                            android:id="@+id/email"
                            style="@style/Edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="johndeo@gmail.com"
                            android:inputType="textEmailAddress" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/border_bottom"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_phone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="@font/opensans_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="0dp"
                            android:paddingStart="16dp"
                            android:text="@string/phone"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="14sp"
                             />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/country_image"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/country"
                                android:paddingBottom="8dp"
                                android:paddingEnd="0dp"
                                android:paddingStart="8dp"
                                android:paddingTop="8dp" />

                            <TextView
                                android:id="@+id/country_number"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingBottom="16dp"
                                android:paddingEnd="0dp"
                                android:paddingStart="0dp"
                                android:paddingTop="8dp"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/mobile"
                                style="@style/Edittext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="3443344543"
                                android:inputType="phone" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/border_bottom"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_gender" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="@font/opensans_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="0dp"
                            android:paddingStart="16dp"
                            android:text="@string/gender"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="14sp"
                             />

                        <Spinner
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/gender"
                            android:padding="8dp" />
                    </LinearLayout>

                </LinearLayout>

